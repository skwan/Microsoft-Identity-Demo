@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>DEMO</h1>
    @if (Request.IsAuthenticated)
    {
        <div>
            <table>
                <thead>
                    <tr>
                        <th>Claim Type</th>
                        <th>Claim Value</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var claim in ViewBag.Claims)
                        {
                            <tr>
                                <td>@claim.Type</td>
                                <td>@claim.Value</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    } else
    {
        <p class="lead">Click to sign in!</p>
        <p>
            @Html.ActionLink(" ", "SignIn", "Account", null, new { @class = "sign-in-button" })
        </p>
    }
</div>

