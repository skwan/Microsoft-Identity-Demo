
@{
    ViewBag.Title = "Claims";
}

<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<div style="overflow-x:auto;">
    <table class="table table-striped table-bordered table-condensed table-hover">
        <thead>
            <tr>
                <th>Claim Type</th>
                <th>Claim Value</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var claim in ViewBag.Claims)
                {
                    <tr>
                        <td>@claim.Type</td>
                        <td>@claim.Value</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>




