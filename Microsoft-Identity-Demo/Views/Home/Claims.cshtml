
@{
    ViewBag.Title = "Claims";
}

<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }
</style>

<div style="overflow-x:auto;">
    <table>
        <thead>
            <tr>
                <th>Claim Type</th>
                <th>Claim Value</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var claim in ViewBag.Claims)
                {
                    <tr>
                        <td>@claim.Type</td>
                        <td>@claim.Value</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>




